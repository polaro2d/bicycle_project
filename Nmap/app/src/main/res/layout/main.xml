<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/mainLayout">

    <yu.Nmap.MainActivity.NMapView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="hello"
        android:id="@+id/mapView"
        />
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView android:id="@+id/text01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="버튼을 누르면 소켓 연결됩니다. 메시지는 로그를 확인하세요."
            tools:context=".NMapViewer"/>

        <Button android:id="@+id/button01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="46dp"
            android:text="소켓 연결하기"
            android:textSize="20dp"
            android:textStyle="bold"
            tools:context=".NMapViewer"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="새로고침"
            android:id="@+id/button02"
            android:layout_below="@+id/text01"
            android:layout_alignEnd="@+id/text01"
            android:layout_marginTop="41dp" />

        <Button
            android:layout_width="45dp"
            android:layout_height="80dp"
            android:text="1"
            android:id="@+id/button1"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/text01" />

        <Button
            android:layout_width="45dp"
            android:layout_height="80dp"
            android:text="2"
            android:id="@+id/button2"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/button1" />

        <Button
            android:layout_width="45dp"
            android:layout_height="80dp"
            android:text="3"
            android:id="@+id/button3"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/button2" />

        <Button
            android:layout_width="45dp"
            android:layout_height="80dp"
            android:text="4"
            android:id="@+id/button4"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/button3" />

        <Button
            android:layout_width="45dp"
            android:layout_height="80dp"
            android:text="5"
            android:id="@+id/button5"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/button4" />

        <Button
            android:layout_width="45dp"
            android:layout_height="80dp"
            android:text="6"
            android:id="@+id/button6"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/button5" />

        <Button
            android:layout_width="45dp"
            android:layout_height="80dp"
            android:text="7"
            android:id="@+id/button7"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/button6" />

        <Button
            android:layout_width="45dp"
            android:layout_height="80dp"
            android:text="8"
            android:id="@+id/button8"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/button7" />


    </RelativeLayout>
</LinearLayout>
